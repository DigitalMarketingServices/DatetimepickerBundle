<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="stephanecollot.form.datetime.options" type="collection" />
    </parameters>

    <services>
    
        <service id="stephanecollot.form.type.datetime" class="StephaneCollot\Bundle\DatetimepickerBundle\Form\Type\DatetimeType">
            <tag name="form.type" alias="collot_datetime" />
            <argument>%stephanecollot.form.datetime.options%</argument>
        </service>
        
    </services>

</container>
